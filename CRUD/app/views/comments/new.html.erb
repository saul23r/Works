
<%= form_for :comment, url: comments_path do |f| %>

    <% if @comment.errors.any? %>
        <div id="error_explanation">
   <h2> <%= pluralize(@comment.errors.count, 'error') %> Prohibidos estos errores para guardar comentarios:</h2>
     <ul>
    <% @comment.errors.full_messages.each do |msg| %>
          <li> <%= msg %><li/>
        <% end %>
        </ul>
          </div>
    <% end %>
<p>
  <%= f.label :title %><br/>
  <%= f.text_field :title %>
</p>

   <p>
    <%= f.label :text %><br/>
    <%= f.text_area :text %>
    </p>

<p>
    <%= f.submit %><br/>

</p>
<% end %>
<p><%= link_to 'Back', comments_path %></p>

